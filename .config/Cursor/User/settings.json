    "#DDA0DD", // Plum (for medium elements)
    "#DA70D6", // Orchid (for medium elements)
    "#BA55D3", // Medium Orchid (for inline elements)
    "#B19CD9", // Light Purple (for strong tags)
    "#9370DB" // Medium Purple (for inline elements)
