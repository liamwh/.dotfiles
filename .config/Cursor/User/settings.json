    "html",
    "xml",
    "vue",
    "typescript",
    "javascript",
    "svelte"
  ],
  "rainbowTags.allowEverywhere": true,
  "rainbowTags.colors": [
    "#E0B0FF", // Light Lavender (for large block elements)
