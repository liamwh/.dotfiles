{
  "update.mode": "none",
  "redhat.telemetry.enabled": false,
  "vsicons.dontShowNewVersionMessage": true,
  "svelte.enable-ts-plugin": true,
  "go.toolsManagement.autoUpdate": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)|todo!",
  "editor.formatOnSave": true,
  "editor.rulers": [
    80,
    120
  ],
  "files.trimTrailingWhitespace": true,
  "editor.wordWrap": "on",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "window.customTitleBarVisibility": "windowed",
  "vscode-neovim.compositeKeys": {},
  "editor.guides.bracketPairs": true,
  "breadcrumbs.enabled": true,
  "editor.stickyScroll.enabled": true,
  "editor.linkedEditing": true,
  "sync.gist": "b9bb0433864eec736ef5581a8b1f812c",
  "sync.autoUpload": true,
  "sync.quietSync": true,
  "editor.matchBrackets": "always",
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "rainbowTags.supportedLanguages": [
    "html",
    "xml",
    "vue",
    "typescript",
    "javascript",
    "svelte"
  ],
  "rainbowTags.allowEverywhere": true,
  "rainbowTags.colors": [
    "#E0B0FF", // Light Lavender (for large block elements)
    "#D8BFD8", // Thistle (for large block elements)
    "#DDA0DD", // Plum (for medium elements)
    "#DA70D6", // Orchid (for medium elements)
    "#BA55D3", // Medium Orchid (for inline elements)
    "#B19CD9", // Light Purple (for strong tags)
    "#9370DB" // Medium Purple (for inline elements)
  ],
  "editor.lineNumbers": "relative",
  "editor.renderFinalNewline": "off",
  "editor.cursorSurroundingLines": 8,
  // Git settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "gitlens.currentLine.enabled": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "makefile.configureOnOpen": true,
  "vale.doNotShowWarningForFileToBeSavedBeforeLinting": true,
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--fast"
  ],
  "haskell.manageHLS": "GHCup",
  "cursor.cpp.disabledLanguages": [
    "haskell"
  ],
  "workbench.activityBar.orientation": "vertical",
  "cSpell.userWords": [
    "autofetch",
    "golangci",
    "neovim",
    "vsicons"
  ],
  "cSpell.language": "en-GB,en,nl",
  "cSpell.enableFiletypes": [
    "!json"
  ],
  "cSpell.languageSettings": [
    {
      "languageId": "json",
      "enabled": false
    },
    {
      "languageId": "jsonc",
      "enabled": false
    }
  ],
  "workbench.iconTheme": "vscode-icons",
  "nix.serverPath": "nixd",
  "nix.enableLanguageServer": true,
  "nix.serverSettings": {
    "nixd": {
      "formatting": {
        "command": [
          "nixpkgs-fmt"
        ]
      }
    }
  },
  "files.associations": {
    ".cursorrules": "plaintext"
  },
  "sherlock.userId": "4069c10d-4f50-49d4-89f7-a373e002b3ea",
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.formatOnSave": true,
  },
  "rust-analyzer.testExplorer": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "opa.dependency_paths.regal": "/Users/dt41nb/regal",
  "opa.languageServers": [
    "regal"
  ],
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "continue.enableTabAutocomplete": true,
  "terraform.languageServer.enable": true,
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "enabled"
  },
  "explorer.confirmPasteNative": false,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "diffEditor.ignoreTrimWhitespace": false,
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "tailwindCSS.includeLanguages": {
    "rust": "html"
  },
  "window.commandCenter": false,
  "workbench.colorTheme": "Ayu Mirage Bordered",
  "multiCommand.commands": [
    {
      "command": "extension.multiCommand.closeSidebarAndOpenLazyGit",
      "sequence": [
        "workbench.action.closeSidebar",
        "lazygit-vscode.toggle",
      ]
    },
    {
      "command": "extension.multiCommand.closeBothSidebarsAndOpenLazyGit",
      "sequence": [
        "workbench.action.closeSidebar",
        "workbench.action.toggleAuxiliaryBar",
        "lazygit-vscode.toggle",
      ]
    }
  ],
  "workbench.panel.opensMaximized": "always",
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#FF8C0040", // FF8C00 @25% opacity
    "editor.selectionForeground": "#000000", // force black text for max contrast
    "editor.selectionHighlightBackground": "#FF8C0026", // FF8C00 @15%
    "editor.selectionHighlightBorder": "#FF8C00", // solid border
    "editor.wordHighlightBackground": "#FF8C001A", // FF8C00 @10%
    "editor.wordHighlightBorder": "#FF8C00"
  },
  "better-comments.highlightPlainText": true,
  "better-comments.tags": [
